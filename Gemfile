# Use jquery as the JavaScript library
gem 'jquery-rails'

gem 'angular-rails-templates', '~> 0.1.3'
# Front end depency manager
gem 'bower-rails', '~> 0.8.3'

# bootstrap
gem 'bootstrap-sass', '~> 3.3.0'
gem 'autoprefixer-rails', '~> 3.1.2.20141016'

